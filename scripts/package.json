{
  "name": "scripts",
  "version": "0.0.1",
  "description": "CLI scripts for Solana code generation and utilities",
  "module": "src/bin.ts",
  "type": "module",
  "private": true,
  "bin": {
    "scripts": "./src/bin.ts"
  },
  "scripts": {
    "cli": "bun run src/bin.ts",
    "dev": "bun run --watch src/bin.ts",
    "build": "bun build src/bin.ts --outdir dist --target bun",
    "build:production": "bun build src/bin.ts --outdir dist --target bun --minify",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist node_modules/.cache",
    "postinstall": "cd ../clients/ts && bun install && bun run build",
    "postinstall:skip-build": "cd ../clients/ts && bun install",
    "validate": "bun run type-check && bun run lint && bun run format:check"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@clack/prompts": "^0.11.0",
    "@codama/nodes-from-anchor": "^1.2.9",
    "@codama/renderers-js": "^1.4.3",
    "@solana-program/system": "^0.9.0",
    "@solana-program/token": "^0.7.0",
    "@solana-program/token-2022": "^0.6.0",
    "@solana/kit": "^4.0.0",
    "@solana/spl-token": "^0.4.14",
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "codama": "^1.3.7",
    "commander": "^14.0.1",
    "consola": "^3.4.2",
    "viem": "^2.38.0",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "solana",
    "cli",
    "codegen",
    "blockchain",
    "scripts"
  ],
  "author": "Base",
  "license": "MIT"
}
